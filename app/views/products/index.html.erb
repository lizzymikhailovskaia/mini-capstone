<h1>All Products:</h1>
<span><a href="/products?sort=price">Sort by Price</a></span>
<span><a href="/products?sort=price&sort_order=desc">Sort by Price Descending</a></span>
<% @products.each do |product| %>
  <div class="well"> <a href="/products/<%= product.id %>">Title: <%= product.name %></a>
  <p> Name: <%= product.name %></p>
  <p> Price: <%= product.price %></p>
  <p> Description: <%= product.description %></p>
  <p> Image:
      <img style="width:200px" src="<%= product.image %>" />
      </p>
  </div>
<% end %>
