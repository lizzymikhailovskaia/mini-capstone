<h1>Signup!</h1>
<%= form_tag '/users', method: :post do  %>
  <div>
    Name:
    <input type="text" name="name">
  </div>

  <div>
    Email:
    <input type="email" name="email">
  </div>

  <div>
    Password:
    <input type="password" name="password">
  </div>
  
  <input type="submit" value="Submit">
<% end %>
